import qs.Data
import QtQuick
import Quickshell
import Quickshell.Wayland

ShellRoot {
	Pam {
		id: lockContext

		onUnlocked: {
			lock.locked = false;
			Qt.quit();
		}
	}

	WlSessionLock {
		id: lock

		locked: true

		WlSessionLockSurface {
			LockSurface {
				anchors.fill: parent
				context: lockContext
			}
		}
	}
}
